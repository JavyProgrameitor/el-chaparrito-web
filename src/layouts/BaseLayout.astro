---
import { site } from "../data/site";
import "../styles/global.css";
const { title = site.name, description = site.tagline } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />

    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="El Chaparrito. Servicios Agrícolas Profesionales"
    />
    <meta
      property="og:description"
      content="Más de 25 años realizando trabajos agrícolas: siembras de precisión, cosecha y mapas de rendimiento."
    />
    <meta
      property="og:image"
      content="https://el-chaparrito-web.vercel.app/og-image.avif"
    />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content="https://el-chaparrito-web.vercel.app/" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rye&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/avif" sizes="32x32" href="/favicon-32.avif" />
    <link rel="icon" type="image/avif" sizes="16x16" href="/favicon-16.avif" />
  </head>
  <body class="bg-jd-yellowSoft text-jd-greenDark font-sans">
    <slot />
  </body>
</html>
